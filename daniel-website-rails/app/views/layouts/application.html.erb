<!DOCTYPE html>
<html>
<head>
  <title> <%= @title %> </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" type="image/ico" href="/assets/favicon.ico" />
</head>
<body>
  <div class ="<%= @bg %>"></div>
  <div class ="wrapper">
    <div class ="<%= @header %>">
      <div class = "header-container">
        <a href="/">
          <span class = "dadler">dadler</span>
        </a>
        <span class = "page"><%=@header_page%></span>
      </div>
    </div>


    <%= yield %>

    <% if @footer %>
        <div class ="<%= @footer %>">
          <div class ="footer-main-container">
            <div class =footer-left-container>
                <a href ="https://github.com/danieladler/"/>
                  <img src ="/assets/github.svg" class ="icon"/>
                </a>
                <a href ="http://twitter.com/adlerography"/>
                  <img src ="/assets/twitter.svg" class ="icon"/>
                </a>
                <a href ="http://instagram.com/dadler"/>
                  <img src ="/assets/instagram.svg" class ="icon"/>
                </a>
                <a href ="http://www.rdio.com/people/dadler"/>
                  <img src ="/assets/rdio.svg" class ="icon"/>
                </a>
                <a href ="mailto:daniel@dadler.codes" target="_top"/>
                  <img src ="/assets/email.svg" class ="icon"/>
                </a>
            </div>
            <div class="footer-right-container">
              <ul class = "footer-links">
                <li><a href ="/about.html">About</a></li>
                <li><a href ="/portfolio.html">Portfolio</a></li>
              </ul>
            </div>
          </div>
      </div>
    <% end %>

  </div>
</body>
</html>
